{
  "swagger": "2.0",
  "info": {
    "title": "Library API",
    "description": "API for managing books and authors (CSE 341 | BYU-I)",
    "version": "1.0.0"
  },
  "host": "cse-341-project2-u397.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/books/": {
      "get": {
        "tags": [
          "Books"
        ],
        "description": "Get all books",
        "responses": {
          "200": {
            "description": "List of books"
          }
        }
      },
      "post": {
        "tags": [
          "Books"
        ],
        "description": "Create a new book",
        "parameters": [
          {
            "name": "book",
            "in": "body",
            "description": "Book data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Book successfully created"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": [
          "Books"
        ],
        "description": "Get book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Book details"
          }
        }
      },
      "put": {
        "tags": [
          "Books"
        ],
        "description": "Update a book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          },
          {
            "name": "book",
            "in": "body",
            "description": "Updated book data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book updated"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      },
      "delete": {
        "tags": [
          "Books"
        ],
        "description": "Delete a book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Book deleted"
          }
        }
      }
    },
    "/authors/": {
      "get": {
        "tags": [
          "Authors"
        ],
        "description": "Get all authors",
        "responses": {
          "200": {
            "description": "List of authors"
          }
        }
      },
      "post": {
        "tags": [
          "Authors"
        ],
        "description": "Create a new author",
        "parameters": [
          {
            "name": "author",
            "in": "body",
            "description": "Author data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Author"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Author successfully created"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/authors/{id}": {
      "get": {
        "tags": [
          "Authors"
        ],
        "description": "Get author by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Author ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Author details"
          }
        }
      },
      "put": {
        "tags": [
          "Authors"
        ],
        "description": "Update an author by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Author ID"
          },
          {
            "name": "author",
            "in": "body",
            "description": "Updated author data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Author"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Author updated"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      },
      "delete": {
        "tags": [
          "Authors"
        ],
        "description": "Delete an author by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Author ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Author deleted"
          }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "The Lord of the Rings"
        },
        "author": {
          "type": "string",
          "example": "J.R.R. Tolkien"
        },
        "genre": {
          "type": "string",
          "example": "Fantasy"
        },
        "publishedYear": {
          "type": "number",
          "example": 1954
        },
        "pages": {
          "type": "number",
          "example": 1178
        },
        "publisher": {
          "type": "string",
          "example": "HarperCollins"
        },
        "language": {
          "type": "string",
          "example": "English"
        },
        "available": {
          "type": "boolean",
          "example": true
        }
      }
    },
    "Author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "J.R.R. Tolkien"
        },
        "birthYear": {
          "type": "number",
          "example": 1892
        },
        "nationality": {
          "type": "string",
          "example": "British"
        },
        "booksWritten": {
          "type": "array",
          "example": [
            "The Hobbit",
            "The Lord of the Rings"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}